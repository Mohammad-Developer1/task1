<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://dozer.sourceforge.net https://dozer.sourceforge.net/schema/beanmapping.xsd">
    <mapping>
        <class-a>ir.publications.task.model.Department</class-a>
        <class-b>ir.publications.task.web.viewModel.DepartmentViewModel</class-b>
        <field type="one-way">
            <a>name</a>
            <b>name</b>
            <a-hint>java.lang.String</a-hint>
            <b-hint>java.lang.String</b-hint>
        </field>
        <field>
            <a>course.id</a>
            <b>courseId</b>
            <a-hint>java.lang.Long</a-hint>
            <b-hint>java.lang.Long</b-hint>
        </field>
        <field type="one-way">
            <a>course.title</a>
            <b>courseTitle</b>
            <a-hint>java.lang.String</a-hint>
            <b-hint>java.lang.String</b-hint>
        </field>
    </mapping>
</mappings>